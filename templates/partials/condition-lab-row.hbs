<li class="row flexrow {{hidden condition.hidden}}" data-mapping-row="{{@index}}" data-condition-id="{{condition.id}}" >
            <!--column 1-->

            <!--column 2-->
            <div class="flexcol content1">

                <!--row 1 icon + text-->
                <div class="flexrow">
                    <!--row 1 col 1 icon-->
                    <div class="flexcol icon">
                        <img name="icon-{{@index}}" src="{{condition.icon}}" class="icon" />
                    </div>
                    <!--row 1 col 2 text-entry-->
                    <div class="flexcol text-entry">
                        <div class="flexrow">
                            <div class="condition">
                                <div class="wrapper-rel">
                                    <label for="condition-{{@index}}" class="inset-label">{{localize "Name"}}</label>
                                    <input type="text" name="condition-{{@index}}" value="{{condition.label}}" class="condition condition-text-input" data-dtype="String" {{disabled isDefault}}>
                                </div>
                            </div>
                        </div>
                        <div class="flexrow condition-lab text-entry reference">
                            <div class="wrapper-rel">
                                <label for="reference-item-{{@index}}" class="inset-label">{{localize "CLT.WORDS.Reference"}}</label>
                                <input type="text" name="reference-item-{{@index}}" value="{{condition.referenceId}}" placeholder="{{localize "CLT.ENHANCED_CONDITIONS.ConditionLab.NoReference"}}" {{disabled isDefault}}>
                            </div>
                            <div class="enriched-link">{{{condition.enrichedReference}}}</div>
                        </div>
                    </div>
                </div>
                <!--row 2 reference-->
                <div class="flexrow path">
                    <div class="wrapper-rel">
                        <label for="icon-path-{{@index}}" class="inset-label">{{localize "CLT.WORDS.Icon"}}</label>
                        <input type="text" name="icon-path-{{@index}}" class="icon-path condition-text-input" value="{{condition.icon}}" placeholder="/icons/example.svg" data-dtype="String" {{disabled isDefault}}>
                    </div>
                    <button type="button" name="file-picker-{{@index}}" class="file-picker" data-type="image" data-target="icon-path-{{@index}}" tabindex="-1" {{hidden isDefault}}>
                            <i class="fas fa-file-import fa-fw"></i>
                        </button>
                </div>
            </div>
            <!--column 3-->
            <div class="flexcol content2">
                <div class="flexrow related-buttons">
                    {{!-- <div class="active-effect"> --}}
                        <button type="button"
                            name="option-config"
                            class="option-config">
                            <i class="fas fa-cog"></i> {{localize "CLT.ENHANCED_CONDITIONS.ConditionLab.Buttons.Options"}}
                        </button>
                        <button type="button"
                                class="active-effect-config"
                                data-tooltip="{{#if condition.isNew}}
                                    {{localize "CLT.ENHANCED_CONDITIONS.Lab.ActiveEffects.TitleDisabledNew"}}
                                    {{else if isDefault}}{{localize "CLT.ENHANCED_CONDITIONS.Lab.ActiveEffects.TitleDisabledDefault"}}
                                    {{/if}}"
                                        {{disabled (or condition.isNew isDefault)}}>
                            <i class="fas fa-hand-sparkles"></i> Active Effect
                        </button>
                        <div class="flex-break"></div>
                        <button type="button"
                            class="trigger-config">
                            {{> "modules/condition-lab-triggler/templates/partials/triggler-icon.hbs"}} Triggers
                        </button>
                        <button type="button"
                            name="macro-config"
                            class="macro-config">
                            <i class="fas fa-code"></i> Macros
                        </button>


                </div>
            </div>
            <!--column 4-->
            <!--delete row-->
            <div class="flexcol row-controls">
                <div class="move-up">
                    {{#unless sortDirection}}
                    {{#unless (eq key 0)}}<a class="move-up"><i class="fas fa-chevron-up"></i></a>{{/unless}}
                    {{/unless}}
                </div>
                <div class="remove-row">
                    {{#unless isDefault}}
                    <a name="remove-row-{{@index}}" class="remove-row" data-tooltip="Delete Row">
                        <i class="fas fa-trash"></i>
                    </a>
                    {{/unless}}
                </div>
                <div class="move-down">
                    {{#unless sortDirection}}
                    {{#unless (eq key conditionMapLength)}}<a class="move-down"><i class="fas fa-chevron-down"></i></a>{{/unless}}
                    {{/unless}}
                </div>
            </div>

        </li>